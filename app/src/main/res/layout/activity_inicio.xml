<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="302dp"
        android:layout_height="131dp"
        android:layout_marginBottom="27dp"
        android:src="@drawable/logo"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.892" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="332dp"
        android:layout_height="46dp"
        android:text="Selecciona el tipo de usuario para iniciar sesión"
        android:textAlignment="textStart"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.797"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.451" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="201dp"
        android:layout_height="29dp"
        android:layout_marginEnd="80dp"
        android:fontFamily="@font/arimo"
        android:text="Iniciar sesión"
        android:textAlignment="center"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.373" />

    <Button
        android:id="@+id/BtnEmpleado"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:backgroundTint="#8BC34A"
        android:onClick="BtnEmpleado"
        android:text="Empleado"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLoginInvitado"
        app:layout_constraintVertical_bias="0.051"
        app:rippleColor="#FFFF" />

    <Button
        android:id="@+id/BtnLoginInvitado"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:layout_marginBottom="280dp"
        android:backgroundTint="#8BC34A"
        android:onClick="BtnEstudiante"
        android:text="Estudiante"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/BtnInvitado"
        android:layout_width="181dp"
        android:layout_height="48dp"
        android:backgroundTint="#8BC34A"
        android:onClick="BtnInvitado"
        android:text="Invitado"
        android:textColor="#FFFFFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/BtnLoginInvitado"
        app:layout_constraintVertical_bias="0.318"
        app:rippleColor="#FFFF" />

</androidx.constraintlayout.widget.ConstraintLayout>